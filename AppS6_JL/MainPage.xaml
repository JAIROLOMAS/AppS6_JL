<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppS6_JL.MainPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

          <Label Text="Consumir Web service Get" FontSize="20" HorizontalTextAlignment="Center"/>
          
            <Entry x:Name="txtCodigo" Placeholder="Ingrese el Codigo"/>
            <Entry x:Name="txtNombre" Placeholder="Ingrese el Nombre"/>
            <Entry x:Name="txtApellido" Placeholder="Ingrese el Apelido"/>
            <Entry x:Name="txtEdad" Placeholder="Ingrese la Edad" Keyboard="Numeric"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
           
                <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Text="Insertar" x:Name="btnIngresar" Clicked="btnIngresar_Clicked"/>
            <Button Grid.Row="0" Grid.Column="1" Text="Regresar" x:Name="btnRegresar" Clicked="btnRegresar_Clicked"/>


        </Grid>

    </StackLayout>
</ContentPage>
